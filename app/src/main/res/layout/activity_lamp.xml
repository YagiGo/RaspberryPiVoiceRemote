<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_lightbulb_outline" />

    <ImageButton
        android:id="@+id/button_lamp_power"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button_lamp_decrease_brightless"
        app:layout_constraintEnd_toEndOf="@+id/button_lamp_increase_brightless"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_lamp_increase_brightless"
        app:layout_constraintTop_toBottomOf="@+id/button_lamp_increase_brightless"
        app:srcCompat="@drawable/ic_power" />

    <ImageButton
        android:id="@+id/button_lamp_increase_brightless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        app:layout_constraintBottom_toTopOf="@+id/button_lamp_power"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_plus" />

    <ImageButton
        android:id="@+id/button_lamp_decrease_brightless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="191dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_lamp_power"
        app:layout_constraintTop_toBottomOf="@+id/button_lamp_power"
        app:srcCompat="@drawable/ic_minus" />

    <Button
        android:id="@+id/button_lamp_cold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cold Light"
        app:layout_constraintStart_toEndOf="@+id/button_lamp_power"
        app:layout_constraintTop_toTopOf="@+id/button_lamp_power" />

    <Button
        android:id="@+id/button_lamp_warm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="47dp"
        android:layout_marginStart="48dp"
        android:text="Warm Light"
        app:layout_constraintEnd_toEndOf="@+id/button_lamp_power"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/button_lamp_power" />
</android.support.constraint.ConstraintLayout>